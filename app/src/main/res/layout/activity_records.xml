<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Records">

    <View
        android:id="@+id/breathCircle"
        android:layout_width="600dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="504dp"
        android:background="@drawable/breathpattern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="337dp"
        android:layout_height="410dp"
        android:layout_marginTop="372dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/status_design_costumized" />


    <TextView
        android:id="@+id/myrecords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="377dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="377dp"
        android:fontFamily="@font/baloo_bhai"
        android:text="My records"
        android:textColor="@color/Primary_Text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAll"
        android:layout_width="47dp"
        android:layout_height="35dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="348dp"
        android:backgroundTint="@color/Primary_Mint_Green"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="All"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button2Y"
        android:layout_width="43dp"
        android:layout_height="36dp"
        android:layout_marginStart="315dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="348dp"
        android:backgroundTint="#DDDDDD"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="2Y"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonToday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="339dp"
        android:backgroundTint="#DDDDDD"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="24h"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWeek"
        android:layout_width="54dp"
        android:layout_height="35dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="339dp"
        android:backgroundTint="#DDDDDD"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Week"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMonth"
        android:layout_width="56dp"
        android:layout_height="35dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="339dp"
        android:backgroundTint="#DDDDDD"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Month"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonYear"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginStart="242dp"
        android:layout_marginTop="415dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="339dp"
        android:backgroundTint="#DDDDDD"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Year"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/monitor_Button"
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="434dp"
        android:backgroundTint="#C8C8C8"
        android:onClick="Home"
        android:text="Monitor"
        android:textColor="@color/Primary_Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/record_Button"
        android:layout_width="163dp"
        android:layout_height="38dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="314dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="434dp"
        android:backgroundTint="@color/Primary_Mint_Green"
        android:onClick="Records"
        android:text="Records"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:toggleCheckedStateOnClick="true" />

    <ListView
        android:id="@+id/recordview"
        android:layout_width="320dp"
        android:layout_height="306dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView25"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="44dp"
        android:layout_height="47dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="723dp"
